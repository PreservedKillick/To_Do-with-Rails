<h1>Tasks To Do</h1>

<ul>
  <% @tasks.not_done_tasks.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.description %></a>
      <form action="/tasks/<%= task.id %>/done" method="post">
        <input name="_method" type="hidden" value="patch">
        <input name="done" type="hidden" value="true">
        <button>Mark done</button>
      </form>
    </br>
    </li>
  <% end %>
</ul>

<h1>Done Tasks</h2>

<ul>
  <% @tasks.done_tasks.each do |task| %>
    <li><a href="/tasks/<%= task.id %>"><%= task.description %></a>
      <form action="/tasks/<%= task.id %>/undo" method="post">
        <input name="_method" type="hidden" value="patch">
        <input name="done" type="hidden" value="false">
        <button>undo</button>
      </form>
    </br>
    </li>

  <% end %>
</ul>


<h2>New task</h2>

<% if @task.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<form action="/tasks" method="post">
  <label for="task_description">Description</label>
  <input id="task_description" name="description" type="text">
  <label for="task_due_date">Due date</label>
  <input id="task_due_date" name ="due_date" type="text">
  <button>Create Task</button>
</form>
